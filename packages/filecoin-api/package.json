{
  "name": "@web3-storage/filecoin-api",
  "version": "1.4.1",
  "type": "module",
  "main": "./src/lib.js",
  "files": [
    "src",
    "test",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map"
  ],
  "typesVersions": {
    "*": {
      "src/lib.js": [
        "dist/src/lib.d.ts"
      ],
      "aggregator": [
        "dist/src/aggregator.d.ts"
      ],
      "dealer": [
        "dist/src/dealer.d.ts"
      ],
      "chain-tracker": [
        "dist/src/chain-tracker.d.ts"
      ],
      "errors": [
        "dist/src/errors.d.ts"
      ],
      "storefront": [
        "dist/src/storefront.d.ts"
      ],
      "types": [
        "dist/src/types.d.ts"
      ],
      "test": [
        "dist/test/lib.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./dist/src/lib.d.ts",
      "import": "./src/lib.js"
    },
    "./types": {
      "types": "./dist/src/types.d.ts",
      "import": "./src/types.js"
    },
    "./aggregator": {
      "types": "./dist/src/aggregator.d.ts",
      "import": "./src/aggregator.js"
    },
    "./dealer": {
      "types": "./dist/src/dealer.d.ts",
      "import": "./src/dealer.js"
    },
    "./chain-tracker": {
      "types": "./dist/src/chain-tracker.d.ts",
      "import": "./src/chain-tracker.js"
    },
    "./storefront": {
      "types": "./dist/src/storefront.d.ts",
      "import": "./src/storefront.js"
    },
    "./errors": {
      "types": "./dist/src/errors.d.ts",
      "import": "./src/errors.js"
    },
    "./test": {
      "types": "./dist/test/lib.d.ts",
      "import": "./test/lib.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "check": "tsc --build",
    "lint": "tsc --build",
    "test": "mocha --bail --timeout 10s -n no-warnings -n experimental-vm-modules -n experimental-fetch test/**/*.spec.js",
    "test-watch": "pnpm build && mocha --bail --timeout 10s --watch --parallel -n no-warnings -n experimental-vm-modules -n experimental-fetch --watch-files src,test"
  },
  "dependencies": {
    "@ipld/dag-ucan": "^3.3.2",
    "@ucanto/client": "^8.0.0",
    "@ucanto/core": "^8.0.0",
    "@ucanto/interface": "^8.0.0",
    "@ucanto/server": "^8.0.0",
    "@ucanto/transport": "^8.0.0",
    "@web3-storage/capabilities": "workspace:^",
    "@web3-storage/data-segment": "^3.0.1"
  },
  "devDependencies": {
    "@ipld/car": "^5.1.1",
    "@types/mocha": "^10.0.1",
    "@ucanto/client": "^8.0.0",
    "@ucanto/principal": "^8.0.0",
    "@web-std/blob": "^3.0.4",
    "@web3-storage/filecoin-client": "workspace:^",
    "hd-scripts": "^4.1.0",
    "mocha": "^10.2.0",
    "multiformats": "^11.0.2",
    "p-wait-for": "^5.0.2"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/hd-scripts/eslint/index.js"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "unicorn/expiring-todo-comments": "off"
    },
    "env": {
      "mocha": true
    },
    "ignorePatterns": [
      "dist",
      "coverage"
    ]
  },
  "depcheck": {
    "specials": [
      "bin"
    ],
    "ignorePatterns": [
      "dist"
    ],
    "ignores": [
      "dist",
      "@types/*",
      "hd-scripts",
      "eslint-config-prettier"
    ]
  },
  "engines": {
    "node": ">=16.15"
  }
}
