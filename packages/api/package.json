{
  "name": "api",
  "version": "0.0.1",
  "description": "Auth API",
  "private": true,
  "type": "module",
  "main": "dist/worker.js",
  "scripts": {
    "lint": "tsc && eslint '**/*.{js,ts}' && prettier --check '**/*.{js,ts,md,yml,json}' --ignore-path ../../.gitignore",
    "deploy": "wrangler publish --env production",
    "dev": "miniflare --watch --debug --env ../../.env",
    "build": "scripts/cli.js build",
    "test": "tsc && ava"
  },
  "author": "Hugo Dias <hugomrdias@gmail.com> (hugodias.me)",
  "license": "(Apache-2.0 OR MIT)",
  "dependencies": {
    "merge-options": "^3.0.4",
    "nanoid": "^3.3.3",
    "regexparam": "^2.0.0",
    "toucan-js": "^2.6.0",
    "ucan-storage": "^1.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.7.1",
    "@sentry/cli": "^1.71.0",
    "@sentry/webpack-plugin": "^1.16.0",
    "@types/assert": "^1.5.6",
    "@types/git-rev-sync": "^2.0.0",
    "assert": "^2.0.0",
    "ava": "^4.2.0",
    "buffer": "^6.0.3",
    "delay": "^5.0.0",
    "dotenv": "^16.0.0",
    "esbuild": "^0.14.38",
    "execa": "^6.1.0",
    "git-rev-sync": "^3.0.1",
    "miniflare": "^2.0.0-rc.3",
    "process": "^0.11.10",
    "readable-stream": "^3.6.0",
    "sade": "^1.7.4"
  },
  "eslintConfig": {
    "extends": [
      "../../node_modules/hd-scripts/eslint/index.js"
    ],
    "ignorePatterns": [
      "pw-test.config.cjs"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "env": {
      "mocha": true
    },
    "globals": {
      "VERSION": "readonly",
      "COMMITHASH": "readonly",
      "BRANCH": "readonly",
      "DEBUG": "readonly"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "dist",
    "docs"
  ],
  "ava": {
    "ignoredByWatcher": [
      "./dist/*"
    ]
  }
}
