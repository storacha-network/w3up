{
  "name": "@web3-storage/aggregate-client",
  "version": "0.0.0",
  "description": "The web3.storage aggregate client",
  "homepage": "https://github.com/web3-storage/w3up/tree/main/packages/aggregate-client",
  "repository": {
    "type": "git",
    "url": "https://github.com/web3-storage/w3up.git",
    "directory": "packages/aggregate-client"
  },
  "author": "Vasco Santos",
  "license": "Apache-2.0 OR MIT",
  "type": "module",
  "types": "dist/src/index.d.ts",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint '**/*.{js,ts}' && prettier --check '**/*.{js,ts,yml,json}' --ignore-path ../../.gitignore",
    "build": "tsc --build",
    "test": "npm run test:all",
    "test:all": "run-s test:browser test:node",
    "test:node": "hundreds -r html -r text mocha 'test/**/!(*.browser).test.js' -n experimental-vm-modules -n no-warnings",
    "test:browser": "playwright-test 'test/**/!(*.node).test.js'",
    "rc": "npm version prerelease --preid rc"
  },
  "exports": {
    ".": "./src/index.js",
    "./aggregate": "./src/aggregate.js",
    "./types": "./src/types.js"
  },
  "typesVersions": {
    "*": {
      "types": [
        "dist/src/types.d.ts"
      ],
      "aggregate": [
        "dist/src/aggregate.d.ts"
      ]
    }
  },
  "files": [
    "src",
    "dist/src/**/*.d.ts",
    "dist/src/**/*.d.ts.map"
  ],
  "dependencies": {
    "@ipld/dag-ucan": "^3.3.2",
    "@ipld/dag-cbor": "^9.0.0",
    "@ucanto/client": "^8.0.0",
    "@ucanto/core": "^8.0.0",
    "@ucanto/interface": "^8.0.0",
    "@ucanto/transport": "^8.0.0",
    "@web3-storage/capabilities": "workspace:^"
  },
  "devDependencies": {
    "@ipld/car": "^5.1.1",
    "@types/assert": "^1.5.6",
    "@types/mocha": "^10.0.1",
    "@ucanto/principal": "^8.0.0",
    "@ucanto/server": "^8.0.1",
    "assert": "^2.0.0",
    "c8": "^7.13.0",
    "hd-scripts": "^4.0.0",
    "hundreds": "^0.0.9",
    "mocha": "^10.2.0",
    "multiformats": "^11.0.2",
    "npm-run-all": "^4.1.5",
    "playwright-test": "^8.1.2",
    "typescript": "4.9.5"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/hd-scripts/eslint/index.js"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "unicorn/no-await-expression-member": "off",
      "unicorn/expiring-todo-comments": "off",
      "unicorn/prefer-spread": "off",
      "no-new": "off"
    },
    "env": {
      "mocha": true
    },
    "ignorePatterns": [
      "dist",
      "coverage"
    ]
  },
  "depcheck": {
    "specials": [
      "bin"
    ],
    "ignores": [
      "@types/*",
      "hd-scripts",
      "assert",
      "c8"
    ]
  }
}
